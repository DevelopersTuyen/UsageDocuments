<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <mageworx_searchsuite>
            <searchsuiteautocomplete_main>
                <search_delay>500</search_delay>
                <autocomplete_fields>suggest,product</autocomplete_fields>
                <suggested_result_number>3</suggested_result_number>
                <product_result_number>5</product_result_number>
                <product_result_fields>name,image,reviews_rating,description,price,qty</product_result_fields>
            </searchsuiteautocomplete_main>
        </mageworx_searchsuite>

        <global>
            <rewrite>
                <designer_url>
                    <from><![CDATA[/catalogsearch/advanced/results\/(.*)/]]></from>
                    <to><![CDATA[/mageworx_searchsuiteautocomplete/advanced/results/$1/]]></to>
                    <complete>1</complete>
                </designer_url>
            </rewrite>
        </global>
    </default>
</config>